<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
      <th>Post</th>
      <th>Download link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr class="card">
        <%
=begin%>
 <td><%= post.user %></td> 
<%
=end%>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <%
=begin%>
 <td><%= post.post %></td> 
<%
=end%>
        <td><%= link_to 'Download', rails_blob_path(post.post, disposition: "attachment") %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
